    <script>
        // Function to toggle dark mode
        function toggleDarkMode() {
            const body = document.body;
            body.classList.toggle('dark-mode');
            
            // Save the dark mode preference to localStorage so it's remembered
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('darkMode', 'enabled');
            } else {
                localStorage.removeItem('darkMode');
            }
        }

        // Check if dark mode was enabled previously and apply it
        window.onload = function() {
            if (localStorage.getItem('darkMode') === 'enabled') {
                document.body.classList.add('dark-mode');
            }
        };

        function showChessboard(piece) {
            const boardElement = document.getElementById(piece + '-board');
            const board = Chessboard(boardElement);
            board.start();
        }

        // Initialize puzzle boards for each piece
        // Example for Pawn puzzle (you can replicate for other pieces)
        function initializePawnPuzzle() {
            const puzzleBoardElement = document.getElementById('pawn-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4P3 w - - 0 1');
        }

        window.onload = function() {
            initializePawnPuzzle();
            // Initialize other puzzles here
        };
    </script>
