    <script>
        function showChessboard(piece) {
            const boardElement = document.getElementById(piece + '-board');
            const board = Chessboard(boardElement);
            board.start();
        }

        // Initialize puzzle boards for each piece (example: Pawn)
        function initializePawnPuzzle() {
            const puzzleBoardElement = document.getElementById('pawn-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4P3 w - - 0 1');
        }

        // Initialize other puzzle boards
        function initializeRookPuzzle() {
            const puzzleBoardElement = document.getElementById('rook-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4R3 w - - 0 1');
        }

        function initializeKnightPuzzle() {
            const puzzleBoardElement = document.getElementById('knight-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4N3 w - - 0 1');
        }

        function initializeBishopPuzzle() {
            const puzzleBoardElement = document.getElementById('bishop-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4B3 w - - 0 1');
        }

        function initializeQueenPuzzle() {
            const puzzleBoardElement = document.getElementById('queen-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4Q3 w - - 0 1');
        }

        function initializeKingPuzzle() {
            const puzzleBoardElement = document.getElementById('king-puzzle-board');
            const puzzleBoard = Chessboard(puzzleBoardElement);
            puzzleBoard.position('8/8/8/8/8/8/8/4K3 w - - 0 1');
        }

        // Initialize all puzzle boards on page load
        window.onload = function() {
            initializePawnPuzzle();
            initializeRookPuzzle();
            initializeKnightPuzzle();
            initializeBishopPuzzle();
            initializeQueenPuzzle();
            initializeKingPuzzle();
        };
    </script>
